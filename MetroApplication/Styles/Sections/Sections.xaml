<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Header" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush  StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#B5CCC9" Offset="0" />
                    <GradientStop Color="#BFFFF7" Offset="0.9" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

    </Style>
    <Style x:Key="Section1" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="#BCF1EA"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    <Style x:Key="Section2" TargetType="Grid">
        <Setter Property="Background" Value="Snow"/>
    </Style>

</ResourceDictionary>